# Multilingual AI Video Dubbing Platform - Environment Configuration

# Database (SQLite for development)
DATABASE_URL=sqlite:///./dubbing_platform.db

# Security
SECRET_KEY=your-super-secret-key-change-in-production-this-is-for-development-only

# Application
DEBUG=true
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://127.0.0.1:3000"]
ALLOWED_HOSTS=["*"]

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=524288000

# AI Services (will be mocked for now)
AI_SERVICES_BASE_URL=http://localhost:8001

# Quality Targets
TARGET_LSE_C=0.85
TARGET_FID=15.0
TARGET_AU_CORRELATION=0.75
TARGET_BLEU=35.0

# Ethics
ENABLE_WATERMARKING=true
ENABLE_CONSENT_TRACKING=true
ENABLE_PROVENANCE=true
WATERMARK_STRENGTH=0.1

# Supported Languages (50+ as per PRD)
SUPPORTED_LANGUAGES=["en","es","fr","de","it","pt","ru","zh","ja","ko","ar","hi","th","vi","tr","pl","nl","sv","da","no","fi","el","he","cs","hu","ro","bg","hr","sk","sl","et","lv","lt","mt","ga","cy","eu","ca","gl","is","mk","sq","sr","bs","me","az","kk","ky","uz","tg"]